{
  "name": "@credovo/shared-types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for Credovo platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "default": "./dist/validation.js"
    },
    "./validation-middleware": {
      "types": "./dist/validation-middleware.d.ts",
      "default": "./dist/validation-middleware.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AmanorsElliot/credovo-platform.git"
  },
  "keywords": [
    "credovo",
    "types",
    "typescript"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0"
  }
}
